<p id="notice"><%= notice %></p>
<div>
	<p>
	<%= image_tag(@store.avatar_url, :width => 200, :height => 200) if @store.avatar.present? %>
	</p>
	<p>
	  <%= @store.name %>
	</p>
	<p>
	  <%= @store.email %>
	</p>
	<p>
	  <%= @store.phone %>
	</p>
	<p>
	  <%= @store.address %>
	</p>

<p>
  <% if user_signed_in? and current_user.store.id == @store.id %>
  <%= link_to 'Publicar Oferta' ,new_store_offer_path(@store) %>
  <p><% link_to 'Agregar en el mapa', new_store_location_path(@store) %></p>
  <% end %>
</p>
</div>

<div>
	<h1>Listing Offers</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Picture</th>
      <th>Description</th>
      <th>Valid until</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @offers.each do |offer| %>
      <tr>
        <td><%= offer.title %></td>
        <td><%= image_tag(offer.picture_url, :width => 100, :height => 100) if offer.picture.present? %></td>
        <td><%= offer.description %></td>
        <td><%= offer.valid_until %></td>
      </tr>
    <% end %>

		<%= link_to 'Edit', edit_store_path(@store) %> |
		<%= link_to 'Back', stores_path %>

</div>
